---
export interface Props {
	title: string;
	Class: string;
}

const { title, Class } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<style>
		@import url('https://fonts.googleapis.com/css2?family=Montserrat&family=Poppins&family=VT323&display=swap');
	</style>
	<body class={Class}>
		<slot />
	</body>
</html>
